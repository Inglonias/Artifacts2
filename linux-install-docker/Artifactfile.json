{
    "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2015-01-01/dtlArtifacts.json",
    "title": "Password update",
    "publisher": "Microsoft",
    "description": "update pass",
    "tags": [
        "Docker",
        "Linux"
    ],
    "parameters": {
        "userParam": {
          "type": "string",
          "displayName": "New username",
          "allowEmpty": false
        },
        "passwordParam": {
          "type": "securestring",
          "displayName": "New password",
          "allowEmpty": false
        }
    },
    "iconUri": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/Artifacts/linux-install-docker/dockerArtifact.png",
    "targetOsType": "Linux",
    "runCommand": {
        "commandToExecute": "['chpasswd <<<"parameters('userParam'):parameters('passwordParam')"']"
    }
}
